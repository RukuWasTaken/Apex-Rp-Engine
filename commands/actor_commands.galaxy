	while (StringWord(argv, colcheker) != "") {
		if(StringFind(StringWord(argv, colcheker), "colossus", c_stringNoCase) != -1 ) {
				UnitGroupLoopBegin(p);
				while(!UnitGroupLoopDone()) {
					libapx_unit_flag_colossus(UnitGroupLoopCurrent());
					UnitGroupLoopStep();
				}
				UnitGroupLoopEnd();
